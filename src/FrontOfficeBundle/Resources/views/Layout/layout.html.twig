<!doctype html>
<html class="no-js" lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ asset("css/styles.css") }}" media="all">
    {% block stylesheets %}{% endblock %}
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
</head>
<body>
<div class="site-pusher">
    <header>
        <div class="header-background">
            {% include "FrontOfficeBundle:Layout:menu.html.twig" %}
            <div class="header-content">
                <div class="container">
                    <div class="row">
                        <div class="header-equipe col-md-3">
                            <p class="header-equipe-nom">{{ prochainMatch.equipeDomicile.nom }}</p>
                            <img src="{{ asset(prochainMatch.equipeDomicile.blason) }}" height="170px">
                        </div>
                        <div class="header-next-match col-md-4 col-md-offset-1">
                            <div class="box">
                                <div class="box-border-bottom box-spacing box-top">
                                    <p>prochain match</p>
                                </div>
                                <div class="box-border-bottom box-spacing box-middle">
                                    <p>{{ jourProchainMatch }} {{ prochainMatch.date|date("d/m/Y") }}</p>
                                </div>
                                <div class="box-bottom box-spacing">
                                    <p>{{ prochainMatch.date|date("H:i") }}</p>
                                </div>
                            </div>
                            <p class="header-next-match-stade">Stade : {{ prochainMatch.equipeDomicile.stade }}</p>
                            <a href="{{ app.request.getBaseURL() }}/match/{{ prochainMatch.id }}"><span class="btn-header-detail">PLUS D'INFOS</span></a>
                        </div>
                        <div class="header-equipe col-md-3 col-md-offset-1">
                            <p class="header-equipe-nom">{{ prochainMatch.equipeExterieur.nom }}</p>
                            <img src="{{ asset(prochainMatch.equipeExterieur.blason) }}" height="170px">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% block body %}{% endblock %}
    <div id="site-cache" class="site-cache"></div>
</div>
{% block javascripts %}
    (function($){
    $('#header-menu-title').click(function(e){
    e.preventDefault();
    $('body').toggleClass('width--sidebar');
    });

    $('#site-cache').click(function(e){
    $('body').removeClass('width--sidebar');
    })

    })(jQuery)
{% endblock %}
</body>
</html>